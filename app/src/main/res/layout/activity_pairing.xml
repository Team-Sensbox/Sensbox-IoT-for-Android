<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sensbox_background_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:background="@color/white">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="기기 연결"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="24"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="32">

            <ImageView
                android:id="@+id/antenna"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_antenna"></ImageView>

            <FrameLayout
                android:id="@+id/currentDevice"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/antenna">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/bg_circle"></ImageView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone"></ImageView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/connectDevice"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/antenna">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/bg_circle_glow"></ImageView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pad"></ImageView>

            </FrameLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/currentDevice"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/antenna"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="16sp"
                android:gravity="center"
                android:text="현재 기기"
                android:textColor="@color/black"></TextView>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/currentDevice"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/antenna"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="16sp"
                android:gravity="center"
                android:text="연결 기기"
                android:textColor="@color/sensbox_blue"></TextView>

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentDevice"
                android:layout_toLeftOf="@+id/antenna"
                android:gravity="center"
                android:text="김센박의 galaxy s10"
                android:textSize="12sp"></TextView>

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentDevice"
                android:layout_toRightOf="@+id/antenna"
                android:gravity="center"
                android:text="김센박의 iPad"
                android:textColor="@color/sensbox_blue"
                android:textSize="12sp"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:background="@drawable/bg_shadow"
        android:orientation="horizontal"
        android:paddingBottom="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="30dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/onlineDot"
                        android:text="●  온라인"
                        android:textColor="#5FAD6D"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingHorizontal="30dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_field"
                        android:backgroundTint="#EBEBF2">

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="30dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/onlineDot"
                        android:text="●  오프라인"
                        android:textColor="#808EA1"
                        android:textSize="15sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingHorizontal="30dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/style_field"
                        android:backgroundTint="#EBEBF2"></FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ⓘ 내 기기가 표시되지 않아요"
                        android:textColor="#808DA1"></TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/style_roundbtn"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="18sp"></androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</LinearLayout>